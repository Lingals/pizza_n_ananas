<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_client_order_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="insset.com.pizzanananas.ClientOrderList">

    <Button
        android:text="Recherche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_client_order_list"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignBottom="@+id/button_client_order_list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editText_client_order_list"
        android:layout_toLeftOf="@+id/button_client_order_list"
        android:layout_toStartOf="@+id/button_client_order_list"
        android:layout_alignParentTop="true"
        android:hint="tapez votre numero de commande" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_client_order_list"
        android:id="@+id/listView_client_order_list" />

</RelativeLayout>
